---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import GitHubDemo from '../components/GitHubDemo.astro';
import TechnicalDetails from '../components/TechnicalDetails.astro';
import MagicBento from '../components/MagicBento.astro';
import SpotlightCard from '../components/SpotlightCard.astro';
import CTA from '../components/CTA.astro';
import CrowdfundingCampaign from '../components/CrowdfundingCampaign.astro';
import TechLogos from '../components/TechLogos.tsx';
import InteractiveWorkflow from '../components/InteractiveWorkflow.tsx';
import BlobCursor from '../Animations/BlobCursor/BlobCursor.tsx';
import Particles from '../Backgrounds/Particles/Particles.tsx';
import Beams from '../Backgrounds/Beams/Beams.tsx';
import LightRays from '../Backgrounds/LightRays/LightRays.tsx';
import FadeContent from '../Animations/FadeContent/FadeContent.tsx';
import '../styles/global.css';
---

<Layout 
	title="PRiority - AI-Powered GitHub Issue Funding | Fix Bugs in Hours, Not Years"
	description="Transform open source sustainability with one GitHub Action. AI estimates complexity, users fund instantly with Stripe, work starts automatically. Join the movement to fix the $8.8T unpaid OSS debt."
>
	<div class="relative overflow-hidden">
		<!-- Light Rays at the very top -->
		<div class="fixed inset-0 pointer-events-none z-[1]">
			<LightRays 
				client:load 
				raysOrigin="top-center"
				raysColor="#66b3ff"
				raysSpeed={0.4}
				lightSpread={3.2}
				rayLength={5}
				pulsating={true}
				fadeDistance={2.7}
				saturation={2.0}
				followMouse={true}
				className="w-full h-full opacity-80"
			/>
		</div>

		<!-- Animated background -->
		<div class="fixed inset-0 mesh-gradient opacity-30 z-[-20]"></div>
		<div class="fixed inset-0 z-[-15]">
			<div class="absolute -top-40 -right-40 w-80 h-80 bg-purple-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-float"></div>
			<div class="absolute -bottom-40 -left-40 w-80 h-80 bg-blue-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-float" style="animation-delay: 2s;"></div>
		</div>

		<!-- Particles Background -->
		<Particles 
			client:load
			particleCount={120}
			particleSpread={1200}
			speed={0.03}
			particleColors={["#66b3ff", "#cc99ff", "#66ffcc", "#ff66cc"]}
			moveParticlesOnHover={true}
			particleHoverFactor={0.5}
			alphaParticles={true}
			particleBaseSize={3}
			sizeRandomness={4}
			cameraDistance={400}
			disableRotation={false}
			className="fixed top-0 left-0 w-full h-full pointer-events-none z-[-5] mix-blend-screen"
		/>

		<!-- Interactive Cursor -->
		<BlobCursor 
			client:load
			blobType="circle"
			fillColor="#60a5fa"
			trailCount={12}
			sizes={[30, 25, 20, 15, 12, 10, 8, 6, 5, 4, 3, 2]}
			opacities={[0.8, 0.7, 0.6, 0.5, 0.4, 0.35, 0.3, 0.25, 0.2, 0.15, 0.1, 0.05]}
			shadowColor="#60a5fa"
			shadowBlur={20}
			useFilter={true}
			fastDuration={0.15}
			slowDuration={0.4}
			zIndex={9999}
		/>

		<!-- Announcement Bar -->
		<div class="fixed top-0 left-0 right-0 z-[110] bg-gradient-to-r from-purple-600 via-blue-600 to-purple-600 text-white py-2 px-4 text-center text-sm font-semibold animate-gradient-x">
			üö® Building the future of open source sustainability ¬∑ Limited spots available üö®
		</div>
		
		<!-- Navigation -->
		<nav class="fixed top-12 left-0 right-0 z-[100] px-6 py-4 lg:px-12 bg-black/50 backdrop-blur-md border-b border-gray-800/50">
			<div class="max-w-7xl mx-auto flex items-center justify-between">
				<div class="flex items-center space-x-2">
					<img src="/PRiority/logo.png" alt="PRiority Logo" class="h-12 w-auto object-contain" />
				</div>
				<div class="flex items-center space-x-8">
					<a href="#how-it-works" class="hidden md:block text-gray-400 hover:text-white transition-all duration-200 font-medium">How it Works</a>
					<a href="#magic-bento" class="hidden md:block text-gray-400 hover:text-white transition-all duration-200 font-medium">Features</a>
					<a href="#fund" class="hidden md:block text-blue-400 hover:text-blue-300 transition-all duration-200 font-semibold">Support</a>
					<a href="https://github.com/gunta/PRiority" target="_blank" class="glow-button text-sm">
						‚≠ê Star on GitHub
					</a>
				</div>
			</div>
		</nav>


		<main class="relative z-20 pt-32">
			<Hero />
		</main>

		<div class="relative z-10">
			<TechLogos client:load />
		</div>

		<!-- Interactive Workflow Demo -->
		<div class="relative z-10">
			<InteractiveWorkflow client:load />
		</div>

		<div class="relative z-10">
			<GitHubDemo />
		</div>

		<!-- How It Works -->
		<section id="how-it-works" class="relative z-10 px-6 py-20 lg:px-12">
			<!-- Beams Background -->
			<div class="absolute inset-0 pointer-events-none z-[-5]">
				<Beams 
					client:load
					lightColor="#60a5fa"
					beamNumber={8}
					beamWidth={2}
					beamHeight={300}
					speed={0.5}
					noiseIntensity={0.3}
				/>
			</div>
			
			<div class="max-w-7xl mx-auto">
				<FadeContent client:load className="text-center mb-16">
					<h2 class="text-4xl md:text-5xl font-bold mb-4">
						<span class="gradient-text">Zero Friction.</span> Maximum Impact.
					</h2>
					<p class="text-xl text-gray-400">From issue to funded to shipped in minutes, not months.</p>
				</FadeContent>

				<div class="grid md:grid-cols-3 gap-8">
					<div class="feature-card">
						<div class="w-12 h-12 bg-blue-500/20 rounded-lg flex items-center justify-center mb-6">
							<svg class="w-6 h-6 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
							</svg>
						</div>
						<h3 class="text-xl font-bold mb-3">AI-Powered Estimation</h3>
						<p class="text-gray-400 mb-4">Claude analyzes your issue complexity, codebase structure, and historical data to provide accurate time and cost estimates.</p>
						<div class="code-block">
							<span class="text-green-400">$</span> <span class="text-gray-300">/estimate</span><br />
							<span class="text-gray-500">‚Üí 8 hours (¬±2h)</span><br />
							<span class="text-gray-500">‚Üí $800 suggested</span><br />
							<span class="text-gray-500">‚Üí 85% confidence</span>
						</div>
					</div>

					<div class="feature-card">
						<div class="w-12 h-12 bg-purple-500/20 rounded-lg flex items-center justify-center mb-6">
							<svg class="w-6 h-6 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
							</svg>
						</div>
						<h3 class="text-xl font-bold mb-3">Instant Funding</h3>
						<p class="text-gray-400 mb-4">One-click payments through Stripe or GitHub Sponsors. No accounts, no friction, just value exchange.</p>
						<div class="code-block">
							<span class="text-green-400">$</span> <span class="text-gray-300">/fund 500</span><br />
							<span class="text-gray-500">‚Üí Payment link ready</span><br />
							<span class="text-gray-500">‚Üí Click to fund</span><br />
							<span class="text-gray-500">‚Üí Work starts now!</span>
						</div>
					</div>

					<div class="feature-card">
						<div class="w-12 h-12 bg-green-500/20 rounded-lg flex items-center justify-center mb-6">
							<svg class="w-6 h-6 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
							</svg>
						</div>
						<h3 class="text-xl font-bold mb-3">Autonomous Execution</h3>
						<p class="text-gray-400 mb-4">AI agents can implement, test, and submit PRs automatically. You review, we deliver.</p>
						<div class="code-block">
							<span class="text-green-400">ü§ñ</span> <span class="text-gray-300">Agent starting...</span><br />
							<span class="text-gray-500">‚Üí Analyzing codebase</span><br />
							<span class="text-gray-500">‚Üí Writing solution</span><br />
							<span class="text-gray-500">‚Üí PR #234 opened</span>
						</div>
					</div>
				</div>
			</div>
		</section>

		<div id="magic-bento" class="relative z-10">
			<MagicBento />
		</div>

		<div class="relative z-10">
			<TechnicalDetails />
		</div>

		<!-- Personal Story Section -->
		<section class="relative z-10 px-6 py-20 lg:px-12">
			<div class="max-w-6xl mx-auto">
				<FadeContent client:load>
					<div class="grid lg:grid-cols-2 gap-12 items-center">
						<!-- Story Content -->
						<div>
							<div class="flex items-center mb-6">
								<img src="https://github.com/gunta.png" alt="@gunta" class="w-16 h-16 rounded-full border-2 border-blue-500/30 mr-4" />
								<div>
									<h3 class="text-2xl font-bold gradient-text"><a href="https://github.com/gunta">@gunta</a></h3>
									<p class="text-gray-400">Creator of OpenSTF</p>
								</div>
							</div>
							
							<h2 class="text-3xl md:text-4xl font-bold mb-6">
								Why I'm Building <span class="gradient-text">PRiority</span>
							</h2>
							
							<div class="space-y-4 text-gray-300 leading-relaxed">
