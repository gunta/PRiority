		</div>

		<!-- Particles Background -->
		<Particles 
			client:load
			particleCount={120}
			particleSpread={1200}
			speed={0.03}
			particleColors={["#66b3ff", "#cc99ff", "#66ffcc", "#ff66cc"]}
			moveParticlesOnHover={true}
			particleHoverFactor={0.5}
			alphaParticles={true}
			particleBaseSize={3}
			sizeRandomness={4}
			cameraDistance={400}
			disableRotation={false}
			className="fixed top-0 left-0 w-full h-full pointer-events-none z-[-5] mix-blend-screen"
		/>

		<!-- Interactive Cursor -->
		<BlobCursor 
			client:load
			blobType="circle"
			fillColor="#60a5fa"
			trailCount={12}
			sizes={[30, 25, 20, 15, 12, 10, 8, 6, 5, 4, 3, 2]}
			opacities={[0.8, 0.7, 0.6, 0.5, 0.4, 0.35, 0.3, 0.25, 0.2, 0.15, 0.1, 0.05]}
			shadowColor="#60a5fa"
			shadowBlur={20}
			useFilter={true}
			fastDuration={0.15}
			slowDuration={0.4}
			zIndex={9999}
		/>

		<!-- FOMO Announcement Bar -->
		<div class="fomo-banner fixed top-0 left-0 right-0 z-[110]">
