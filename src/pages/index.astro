---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import GitHubDemo from '../components/GitHubDemo.astro';
import TechnicalDetails from '../components/TechnicalDetails.astro';
import MagicBento from '../components/MagicBento.astro';
import SpotlightCard from '../components/SpotlightCard.astro';
import CTA from '../components/CTA.astro';
import TechLogos from '../components/TechLogos.tsx';
import InteractiveWorkflow from '../components/InteractiveWorkflow.tsx';
import FAQ from '../components/FAQ.astro';
import ComparisonTable from '../components/ComparisonTable.tsx';
import WhyNow from '../components/WhyNow.astro';
import PricingTiers from '../components/PricingTiers.astro';
import GitHubStarButton from '../components/GitHubStarButton.tsx';
import BlobCursor from '../Animations/BlobCursor/BlobCursor.tsx';
import Particles from '../Backgrounds/Particles/Particles.tsx';
import Beams from '../Backgrounds/Beams/Beams.tsx';
import LightRays from '../Backgrounds/LightRays/LightRays.tsx';
import FadeContent from '../Animations/FadeContent/FadeContent.tsx';
import '../styles/global.css';
---

<Layout 
	title="PRiority - AI-Powered GitHub Issue Funding | Fix Bugs in Hours, Not Years"
	description="Transform open source sustainability with one GitHub Action. AI estimates complexity, users fund instantly with Stripe, work starts automatically. Join the movement to fix the $8.8T unpaid OSS debt."
>
	<div class="relative overflow-hidden">
		<!-- Light Rays at the very top -->
		<div class="fixed inset-0 pointer-events-none z-[1]">
			<LightRays 
				client:load 
				raysOrigin="top-center"
				raysColor="#66b3ff"
				raysSpeed={0.4}
				lightSpread={3.2}
				rayLength={5}
				pulsating={true}
				fadeDistance={2.7}
				saturation={2.0}
				followMouse={true}
				className="w-full h-full opacity-80"
			/>
		</div>

		<!-- Animated background -->
		<div class="fixed inset-0 mesh-gradient opacity-30 z-[-20]"></div>
		<div class="fixed inset-0 z-[-15]">
			<div class="absolute -top-40 -right-40 w-80 h-80 bg-purple-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-float"></div>
