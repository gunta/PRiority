<script>
	// Animate counters
	function animateCounter(elementId, start, end, duration, prefix = '') {
		const element = document.getElementById(elementId);
		if (!element) return;
		
		let startTime = null;
		const step = (timestamp) => {
			if (!startTime) startTime = timestamp;
			const progress = Math.min((timestamp - startTime) / duration, 1);
			const current = Math.floor(progress * (end - start) + start);
			element.textContent = prefix + current.toLocaleString();
			if (progress < 1) {
				window.requestAnimationFrame(step);
			}
		};
		window.requestAnimationFrame(step);
	}

	// Start animations when page loads
	window.addEventListener('load', () => {
		animateCounter('hours-wasted', 0, 8847, 2000);
		animateCounter('money-lost', 0, 442350, 2500, '$');
		
		// Update counters periodically
		setInterval(() => {
			const hoursElement = document.getElementById('hours-wasted');
			const moneyElement = document.getElementById('money-lost');
			if (hoursElement && moneyElement) {
				const currentHours = parseInt(hoursElement.textContent.replace(/,/g, ''));
				const currentMoney = parseInt(moneyElement.textContent.replace(/[$,]/g, ''));
				hoursElement.textContent = (currentHours + Math.floor(Math.random() * 5) + 1).toLocaleString();
				moneyElement.textContent = '$' + (currentMoney + Math.floor(Math.random() * 500) + 50).toLocaleString();
			}
		}, 5000);
	});
</script>