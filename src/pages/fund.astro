import Layout from '../layouts/Layout.astro';
import TiltedCard from '../components/TiltedCard.astro';
import '../styles/global.css';
// Crowd-Validation Campaign Section
---

<Layout 
	title="Fund PRiority - Crowd-Validation Campaign"
	description="Support the development of PRiority, the AI-powered GitHub issue funding platform. Help validate the need for sustainable open source funding."
>
	<div class="relative overflow-hidden">
		<!-- Animated background -->
		<div class="fixed inset-0 mesh-gradient opacity-30 z-[-20]"></div>
		<div class="fixed inset-0 z-[-15]">
			<div class="absolute -top-40 -right-40 w-80 h-80 bg-purple-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-float"></div>
			<div class="absolute -bottom-40 -left-40 w-80 h-80 bg-blue-500 rounded-full mix-blend-multiply filter blur-3xl opacity-10 animate-float" style="animation-delay: 2s;"></div>
		</div>
		
		<!-- Navigation -->
		<nav class="fixed top-0 left-0 right-0 z-[100] px-6 py-4 lg:px-12 bg-black/50 backdrop-blur-md border-b border-gray-800/50">
			<div class="max-w-7xl mx-auto flex items-center justify-between">
				<div class="flex items-center space-x-2">
					<a href="/PRiority/">
						<img src="/PRiority/logo.png" alt="PRiority Logo" class="h-12 w-auto object-contain" />
					</a>
				</div>
				<div class="flex items-center space-x-6">
					<a href="/PRiority/" class="text-gray-400 hover:text-white transition-all duration-200 font-medium">‚Üê Back to Home</a>
				</div>
			</div>
		</nav>

		<main class="relative z-20 pt-20">
			<section id="fund" class="crowd-validation-section">
				<div class="container">
					<!-- Hero -->
					<div class="hero">
						<h1 class="hero-title">
							<span class="line-1">Every Day,</span>
							<span class="line-2">47,000 Critical Bugs</span>
							<span class="line-3">Go Unfixed</span>
						</h1>
						<p class="tagline">Because maintainers can't afford to work on them.</p>
						<p class="creator">Let's fix this together ¬∑ by <a href="https://github.com/gunta" target="_blank">@gunta</a></p>
					</div>
					
					<!-- Live Counter -->
					<div class="live-counter">
						<div class="counter-item">
							<div class="counter-number" id="hours-wasted">8,847</div>
							<div class="counter-label">Developer Hours Wasted Today</div>
						</div>
						<div class="counter-item">
							<div class="counter-number" id="money-lost">$442,350</div>
							<div class="counter-label">Productivity Lost Today</div>
						</div>
						<div class="counter-item">
							<div class="counter-number urgent" id="issues-waiting">2.3M</div>
							<div class="counter-label">Issues Waiting for Fixes</div>
						</div>
					</div>
					
					<div class="milestone-banner">
						<div class="progress-container">
							<div class="progress-bar" style="width: 12%"></div>
							<div class="progress-text">
								<span class="progress-current">$1,247</span> raised of <span class="progress-goal">$10,000</span> goal
							</div>
						</div>
						<div class="supporters-count">
							<svg class="heart-icon" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
