---
import TiltedCard from './TiltedCard.astro';
import FadeContent from '../Animations/FadeContent/FadeContent.tsx';
import Orb from '../Backgrounds/Orb/Orb.tsx';
import ShinyText from './ShinyText.astro';
import GradientText from './GradientText.astro';
import GitHubStarButton from './GitHubStarButton.tsx';
---

<div class="hero-container">
	<!-- Background Orb - positioned around logo -->
	<div class="absolute inset-x-0 -top-70 h-[700px] flex items-start justify-center pointer-events-none z-[-20] pt-32 scale-150">
		<Orb 
			client:load
			hue={260}
			hoverIntensity={0.5}
			rotateOnHover={true}
			forceHoverState={false}
		/>
	</div>

	<!-- Hero Title -->
	<FadeContent client:load className="logo-section" delay={200}>
		<div class="logo-container">
			<img src="/PRiority/logo.png" alt="PRiority Logo" class="h-48 md:h-64 w-auto object-contain" />
			<div class="logo-text -mt-2 mb-12">
				<ShinyText text="AI-Powered GitHub Issue Funding" class="text-2xl md:text-3xl" />
			</div>
		</div>
	</FadeContent>

	<!-- Main Content -->
	<FadeContent client:load className="hero-content" delay={400}>
		<p class="text-xl md:text-2xl text-gray-300 mb-8 max-w-4xl mx-auto leading-relaxed">
			Imagine a world where critical bugs get fixed in hours, not years. 
			Where maintainers thrive, not burn out. 
			Where your support directly ships the features you need.
		</p>

		<!-- CTA Buttons -->
		<div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12">
			<a href="/PRiority/fund" class="glow-button group">
