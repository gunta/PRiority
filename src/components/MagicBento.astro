<style>
  .magic-bento-container {
    width: 100%;
    max-width: 80rem;
    margin: 0 auto;
  }

  .bento-grid {
    display: grid;
    gap: 1rem;
    padding: 1rem;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: repeat(3, 200px);
  }

  .bento-item {
    position: relative;
    overflow: hidden;
    border-radius: 1rem;
    background: linear-gradient(to bottom right, rgba(17, 24, 39, 0.5), rgba(17, 24, 39, 0.2));
    border: 1px solid rgba(31, 41, 55, 1);
    backdrop-filter: blur(8px);
    transition: all 0.5s ease;
    cursor: pointer;
  }

  .bento-item::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(to bottom right, rgba(59, 130, 246, 0.1), rgba(168, 85, 247, 0.1));
    opacity: 0;
    transition: opacity 0.5s ease;
    z-index: 1;
  }

  .bento-item:hover::before {
    opacity: 1;
  }

  .bento-item:hover {
    border-color: rgba(168, 85, 247, 0.5);
    box-shadow: 0 25px 50px -12px rgba(168, 85, 247, 0.2);
    transform: translateY(-0.5rem) scale(1.02);
  }

  .bento-large {
    grid-column: span 2;
    grid-row: span 2;
  }

  .bento-wide {
    grid-column: span 2;
  }

  .bento-tall {
    grid-row: span 2;
  }

  .bento-content {
    position: relative;
    z-index: 10;
    padding: 1.5rem;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .bento-icon {
    width: 3rem;
    height: 3rem;
    background: linear-gradient(to bottom right, rgba(59, 130, 246, 0.2), rgba(168, 85, 247, 0.2));
    border-radius: 0.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1rem;
  }

  .bento-icon svg {
    color: #60a5fa;
  }

  .bento-title {
    font-size: 1.125rem;
    font-weight: 700;
    color: white;
    margin-bottom: 0.5rem;
  }

  .bento-description {
    font-size: 0.875rem;
    color: #9ca3af;
    line-height: 1.625;
  }

  .bento-stats {
    margin-top: auto;
  }

  .stat {
    font-size: 1.5rem;
    font-weight: 700;
    color: #60a5fa;
  }

  .stat-label {
    font-size: 0.75rem;
    color: #6b7280;
    display: block;
  }

  .bento-progress {
    margin-top: auto;
  }

  .progress-bar {
    width: 100%;
    background-color: #1f2937;
    border-radius: 9999px;
    height: 0.5rem;
    margin-bottom: 0.5rem;
  }

  .progress-fill {
    background: linear-gradient(to right, #3b82f6, #8b5cf6);
    height: 0.5rem;
    border-radius: 9999px;
    transition: all 0.5s ease;
  }

  .progress-text {
    font-size: 0.75rem;
    color: #9ca3af;
  }

  .bento-chart {
    display: flex;
    align-items: end;
    gap: 0.25rem;
    margin-top: 1rem;
  }

  .chart-bar {
    width: 0.75rem;
    background: linear-gradient(to top, #3b82f6, #8b5cf6);
    border-top-left-radius: 0.25rem;
    border-top-right-radius: 0.25rem;
    transition: all 0.5s ease;
  }

  .bento-glow {
    position: absolute;
    inset: 0;
    background: linear-gradient(to bottom right, rgba(59, 130, 246, 0.05), rgba(168, 85, 247, 0.05));
    opacity: 0;
    transition: opacity 0.5s ease;
    filter: blur(40px);
  }

  .bento-item:hover .bento-glow {
    opacity: 1;
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .bento-grid {
      grid-template-columns: repeat(2, 1fr);
      grid-template-rows: repeat(4, 180px);
    }
  }

  @media (max-width: 640px) {
    .bento-grid {
      grid-template-columns: 1fr;
      grid-template-rows: repeat(6, 160px);
    }
    
    .bento-large,
    .bento-wide,
    .bento-tall {
      grid-column: span 1;
      grid-row: span 1;
    }
  }

  /* Animation Classes */
  .bento-item[data-category="ai"]:hover {
    border-color: rgba(59, 130, 246, 0.5);
    box-shadow: 0 25px 50px -12px rgba(59, 130, 246, 0.2);
  }

  .bento-item[data-category="payment"]:hover {
    border-color: rgba(34, 197, 94, 0.5);
    box-shadow: 0 25px 50px -12px rgba(34, 197, 94, 0.2);
  }

  .bento-item[data-category="infrastructure"]:hover {
    border-color: rgba(168, 85, 247, 0.5);
    box-shadow: 0 25px 50px -12px rgba(168, 85, 247, 0.2);
  }
</style>

<script>
  // Add GSAP animations for enhanced effects
  import { gsap } from 'gsap';

  // Animate items on scroll
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry, index) => {
      if (entry.isIntersecting) {
        gsap.fromTo(entry.target, 
          { 
            opacity: 0, 
            y: 50,
            scale: 0.9
          },
          { 
            opacity: 1, 
            y: 0, 
            scale: 1,
            duration: 0.6,
            delay: index * 0.1,
            ease: "back.out(1.7)"
          }
        );
      }
    });
  }, observerOptions);

  // Observe all bento items
  document.querySelectorAll('.bento-item').forEach(item => {
    observer.observe(item);
  });

  // Add hover animations
  document.querySelectorAll('.bento-item').forEach(item => {
    item.addEventListener('mouseenter', () => {
      gsap.to(item.querySelector('.bento-icon'), {
        rotation: 360,
        duration: 0.6,
        ease: "back.out(1.7)"
      });
      
      gsap.to(item.querySelector('.bento-glow'), {
        opacity: 1,
        duration: 0.3
      });
    });

    item.addEventListener('mouseleave', () => {
      gsap.to(item.querySelector('.bento-icon'), {
        rotation: 0,
        duration: 0.4,
        ease: "power2.out"
      });
      
      gsap.to(item.querySelector('.bento-glow'), {
        opacity: 0,
        duration: 0.3
      });
    });
  });
</script>
